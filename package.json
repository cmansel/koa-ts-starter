{
  "name": "koa-starter",
  "version": "0.0.0",
  "scripts": {
    "start": "NODE_PATH=./build node build/app.js",
    "build": "tsc -p .",
    "dev": "nodemon src/app.ts",
    "lint": "eslint src/*",
    "format": "prettier --ignore-path .gitignore --write \"**/*.+(js|ts|json)\"",
    "format-ci": "prettier --ignore-path .gitignore --check \"**/*.+(js|ts|json)\""
  },
  "dependencies": {
    "@koa/cors": "4.0.0",
    "koa": "2.13.4",
    "koa-bodyparser": "4.3.0",
    "koa-helmet": "6.1.0",
    "koa-json": "2.0.2",
    "koa-logger": "3.2.1",
    "koa-router": "12.0.0",
    "koa-swagger-decorator": "^1.8.6",
    "reflect-metadata": "^0.1.13"
  },
  "devDependencies": {
    "@types/koa": "^2.13.5",
    "@types/koa__cors": "^3.3.0",
    "@types/koa__router": "^8.0.11",
    "@types/koa-bodyparser": "^4.3.8",
    "@types/koa-helmet": "^6.0.4",
    "@types/koa-json": "^2.0.20",
    "@types/koa-logger": "^3.1.2",
    "@types/node": "^18.11.3",
    "@typescript-eslint/eslint-plugin": "^5.54.1",
    "@typescript-eslint/parser": "^5.54.1",
    "eslint": "^8.35.0",
    "eslint-config-prettier": "^8.7.0",
    "nodemon": "2.0.20",
    "prettier": "^2.8.4",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5"
  },
  "engines": {
    "node": "16"
  },
  "license": "ISC",
  "prettierrc": {
    "printWidth": 80,
    "tabWidth": 2,
    "useTabs": false,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "none",
    "bracketSpacing": true,
    "jsxBracketSameLine": false,
    "fluid": false
  }
}
